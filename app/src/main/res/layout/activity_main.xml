<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:padding="12dp"
    tools:ignore="MissingClass">
    <!--total size: 227dp x 227dp-->
    <!--total size: 336px x 336px-->
    <!--total size: 298px x 298px-->

    <ImageView
        android:id="@+id/heartRateTextView"
        android:layout_width="150px"
        android:layout_height="40px"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="82dp"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/heart_rate"
        android:text="@string/heart_rate"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/heartRateValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="0dp"
        android:layout_marginTop= "10dp"
        />

    <ImageButton
        android:id="@+id/volumeUpButton"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_below="@id/volumeDownButton"
        android:layout_marginStart="280px"
        android:layout_marginTop="80dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/plus_image" />

    <ImageButton
        android:id="@+id/volumeDownButton"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_below="@id/volumeUpButton"
        android:layout_marginStart="20px"
        android:layout_marginTop="79dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/minus_image" />

    <ImageButton
        android:id="@+id/frequencyButton"
        android:layout_width="140px"
        android:layout_height="80px"
        android:layout_below="@id/volumeDownButton"
        android:layout_marginStart="35px"
        android:layout_marginTop="236px"
        android:layout_marginEnd="0dp"
        android:background="@null"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:scaleType="fitStart"
        android:src="@drawable/tempo_image" />

    <!--        android:drawableStart="@drawable/plus_image"-->
    <!--        android:drawableTint="#241460"-->

    <ImageButton
        android:id="@+id/bluetoothButton"
        android:layout_width="140px"
        android:layout_height="46px"
        android:layout_marginStart="174px"
        android:layout_marginTop="236px"
        android:layout_marginEnd="0dp"
        android:background="@null"
        android:scaleType="fitStart"
        android:src="@drawable/send_image"
        android:text="Send"
        android:textColor="#241460"
        android:textSize="8sp" />

    <com.example.bpmheartbeat.presentation.SemicircleProgressBar
        android:id="@+id/volumeProgressBar"
        android:layout_width="400px"
        android:layout_height="160px"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:max="10"
        android:progress="0"
        android:progressTint="#FFFFFF"
        style="@style/CurvedProgressBar"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0px"/>



</androidx.wear.widget.BoxInsetLayout>
